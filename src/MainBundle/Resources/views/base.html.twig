                                <li>
                                    <a href="{{ path('logout') }}"><i class="fa fa-fw fa-power-off"></i> Wyloguj siÄ™</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                {% else %}              
                    <ul class="nav navbar-nav " style="float:right">                  
                        <li >
                            <a href="{{ path('login') }}"><i class="fa fa-fw fa-user"></i>  Logowanie</a>          
                        </li>
                        <li >
                            <a href="{{ path('registration') }}"><i class="fa fa-user-plus" aria-hidden="true" ></i> Rejestracja</a>          
                        </li>
                   </ul>     
                {% endif %} 
           {% endblock %}
       </nav>     
       <div id="page-wrapper">
            <div class="container-fluid">              
                <div class="row">
                    <div class="col-lg-12">
                        {% block container %}
                        
                        {% endblock %}
                    </div>
                </div>          
            </div>         
        </div>                 
        {% block script %} 
            <script src="{{ asset('bundles/main/js/jquery.js') }}"></script>
            <script src="{{ asset('bundles/main/js/bootstrap.min.js') }}"></script>    
        {% endblock %}
    </div>
</body>
</html>
