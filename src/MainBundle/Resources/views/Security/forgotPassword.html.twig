{% extends 'MainBundle:Template:normalWebsiteWithBar.html.twig' %}
{% form_theme forgotPasswordForm 'MainBundle:form:horizontal.html.twig' %}


{% block title %}
Zapomniałeś hasła? 
{% endblock %}

{% block link %}
    {{ parent() }}
    <link href="{{ asset('bundles/main/css/security.css')}}" rel="stylesheet">
{% endblock %}

{% block container %}

<div class="security container">
    <div class="col-md-8 col-md-offset-2 top-buffer">
    	<div class="panel panel-default panel-transparent">
    		<div class="panel-heading">
    			<span class="glyphicon glyphicon-lock"></span> Zmiana hasła
    		</div>
    		<div class="panel-body">
    			<div class="col-md-10 col-md-offset-1">
    				<h1>Zapomniałeś hasła?</h1>
    				<p class="bottom-buffer">Podaj nam swój adres email użyty przy rejestracji, a wygenerujemy Ci nowe hasło!</p>
    				
    				 {% if app.session.flashBag.has('success') %}
                        <div class="alert alert-success">
                            {% for msg in app.session.flashBag.get('success') %}
                                {{ msg }}
                            {% endfor %}
                        </div>
                     {% elseif  app.session.flashBag.has('noSuccess')%}                	
                        <div class="alert alert-danger">
                            {% for msg in app.session.flashBag.get('noSuccess') %}
                                {{ msg }}
                            {% endfor %}
                        </div>
           		     {% endif %}
    				<div class="col-md-12">
    					{{ form(forgotPasswordForm) }}
    				</div>
    			</div>
    		</div>
    		<div class="panel-footer">
    		</div>
    	</div>
    </div>
</div>

{% endblock %}