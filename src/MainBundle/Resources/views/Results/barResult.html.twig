
	<div class="col-md-offset-0 col-md-12 text-left">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">{{ question.position }}. {{ question.questionText }}</h3>
			</div>
			<div class="panel-body">
				{% if dataIsEmpty %}
    		    		<h4 class="text-center vertical-center">Brak odpowiedzi</h4>
    		    {% else %}
    		    	<div id="morris-bar-chart{{ question.id }}"></div>
    		    {% endif %}			
			</div>
		</div>
	</div>


<script type="text/javascript">
$(document).ready(function() {
	 // Bar Chart
    Morris.Bar({
        element: 'morris-bar-chart{{ question.id }}',
      
        data: [
      	  {% for option in options %}   
      	  {
      		  label: '{{ option.optionText }}',
              data:  '{{option.answerNumber}}'
      	  },       	 
          {% endfor %}       
      ],
        xkey: 'label',
        ykeys: ['data'],
        labels: ['Liczba odpowiedzi'],
        barRatio: 0.4,
        xLabelAngle: 35,
        hideHover: 'auto',
        resize: true
    });

});
   
</script>
