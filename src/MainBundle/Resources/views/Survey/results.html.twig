{% extends 'MainBundle:Template:sidebarWebiste.html.twig' %}



{% block title %}Wyniki - {{ survey.title }}{% endblock %}

{% block link %}
  	{{ parent() }}
   <script src="{{ asset('bundles/main/js/jquery2.js') }}"></script>
{% endblock %}

{% block container %}
<div class="container">	
    	<div class="col-md-12 bottom-buffer">
    			<h1 class="page-header">
    				{{ survey.title }}				
    			</h1>
    			<p>
    				{{ survey.description }}			
    			</p>
    			<p>
    				Liczba ankietowanych: {{ survey.responesNumber }}			
    			</p>
    	</div>
    {% for question in questions %}   
        <div class="col-md-6 without-spacing">
            {{ render(controller('MainBundle:Results:result',{ 'questionId': question.Id })) }}  
        </div> 
    {% endfor %}  
</div>   
{% endblock %}


{% block script %}   
    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bundles/main/js/bootstrap.min.js') }}"></script>

    <!-- Morris Charts JavaScript -->
    <script src="{{ asset('bundles/main/js/plugins/morris/raphael.min.js') }}"></script>
    <script src="{{ asset('bundles/main/js/plugins/morris/morris.min.js') }}"></script>
    <script src="{{ asset('bundles/main/js/plugins/morris/morris-data.js') }}"></script>

    <!-- Flot Charts JavaScript -->
    <!--[if lte IE 8]><script src="js/excanvas.min.js"></script><![endif]-->
    <script src="{{ asset('bundles/main/js/plugins/flot/jquery.flot.js') }}"></script>
    <script src="{{ asset('bundles/main/js/plugins/flot/jquery.flot.tooltip.min.js') }}"></script>
    <script src="{{ asset('bundles/main/js/plugins/flot/jquery.flot.resize.js') }}"></script>
    <script src="{{ asset('bundles/main/js/plugins/flot/jquery.flot.pie.js') }}"></script>
    <script src="{{ asset('bundles/main/js/plugins/flot/flot-data.js') }}"></script>
           
     <script type="text/javascript"> 
         $( document ).ready(function() {
        	    var heights = $(".panel").map(function() {
        	        return $(this).height();
        	    }).get();
        
        	    maxHeight = Math.max.apply(null, heights);
        
        	    $(".panel").height(maxHeight);
       	             
        	});   
    </script>     
        
{% endblock %}

       

